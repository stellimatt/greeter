<VirtualHost *:80>
  ServerName <%= node[:greeter][:server_name] %>
  DocumentRoot <%= node[:greeter][:docroot] %>

  <Directory <%= node[:greeter][:docroot] %>>
    Options FollowSymLinks
    AllowOverride FileInfo Options
    AllowOverride All
    Order allow,deny
    Allow from all
    Require all granted
  </Directory>

  <Directory />
    Options FollowSymLinks
    AllowOverride None
  </Directory>

</VirtualHost>
